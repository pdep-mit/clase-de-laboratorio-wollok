import model.casa.*
import model.habitantes.*
import model.disfraces.*

describe "Cuantos caramelos daría la casa con Sandra" {
	
	fixture {
		casa.quienAbreLaPuerta(sandra)
	}
	
	test "Sandra puede dar 8 caramelos si la casa está en orden"{	
		casa.caos(0)	
		assert.equals(8, sandra.cuantosCaramelosDa(casa, disfrazCustom))
	}
	
	test "Sandra puede dar 2 caramelos si la casa no está en orden"{
		casa.caos(3)
		assert.equals(2, sandra.cuantosCaramelosDa(casa, disfrazCustom))
	}
}