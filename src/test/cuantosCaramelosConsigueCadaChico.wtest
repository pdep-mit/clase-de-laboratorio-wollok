import model.casa.*
import model.habitantes.*
import model.disfraces.*
import model.chicos.*

describe "Cuantos caramelos pueden conseguir los chicos" {
	fixture {
		casa.quienAbreLaPuerta(jorge)
		juanita.disfraz(disfrazFrozen)
		tito.disfraz(disfrazZombie)
	}
	
	test "Rolo consigue 1 caramelo siempre" {
		assert.equals(1, rolo.cuantosCaramelosPodriaConseguir(casa))
	}
	
	test "Juanita consigue 2 caramelos más de lo normal" {
		assert.equals(12 , juanita.cuantosCaramelosPodriaConseguir(casa))
	}
	
	test "Tito disfrazado distinto a Juanita consigue la cantidad normal de caramelos" {
		assert.equals(10, tito.cuantosCaramelosPodriaConseguir(casa))
	}
		
	test "Tito disfrazado igual a Juanita consigue la cantidad normal de caramelos" {
		tito.disfraz(disfrazFrozen)
		assert.equals(12, tito.cuantosCaramelosPodriaConseguir(casa))
	}
}